<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.NewProfileActivityB">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/progressBar_newProfile"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:indeterminate="false"
            android:visibility="gone"/>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/gps"
            android:text="GPS"
            android:src="@drawable/ic_location_on_black_48dp"
            style="?android:attr/borderlessButtonStyle"
            android:onClick="gpsClick"
            android:scaleType="center"
            android:background="#80cbc4"
            android:contentDescription="GPS"/>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/preferiti"
            android:text="Preferiti"
            android:src="@drawable/ic_favorite_black_48dp"
            style="?android:attr/borderlessButtonStyle"
            android:onClick="favoritesClick"
            android:background="#26a69a"
            android:scaleType="center"
            android:contentDescription="Preferiti"/>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/indirizzo"
            android:text="Indirizzo"
            android:src="@drawable/ic_location_city_black_48dp"
            style="?android:attr/borderlessButtonStyle"
            android:onClick="addressClick"
            android:background="#00897b"
            android:contentDescription="Indirizzo"/>
    </LinearLayout>

</RelativeLayout>
