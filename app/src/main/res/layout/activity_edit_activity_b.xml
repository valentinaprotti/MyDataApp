<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="unibo.progettotesi.activities.EditActivityB">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/progressBar_newProfile"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:indeterminate="false"
            android:visibility="gone"/>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/name"
            android:text="Profile Name"
            android:src="@drawable/ic_label_outline_black_48dp"
            style="?android:attr/borderlessButtonStyle"
            android:onClick="nameEditClick"
            android:scaleType="center"
            android:background="#80cbc4"
            android:contentDescription="Nome Profilo"
            />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/start"
            android:text="Start"
            android:src="@drawable/ic_flight_takeoff_black_48dp"
            style="?android:attr/borderlessButtonStyle"
            android:onClick="departureClick"
            android:background="#26a69a"
            android:scaleType="center"
            android:contentDescription="Partenza"/>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/destination"
            android:text="Arrivo"
            android:src="@drawable/ic_flight_land_black_48dp"
            style="?android:attr/borderlessButtonStyle"
            android:onClick="arrivalClick"
            android:background="#00897b"
            android:contentDescription="Destinazione"/>
    </LinearLayout>


</RelativeLayout>
